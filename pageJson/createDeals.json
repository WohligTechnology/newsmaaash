{
    "title": "Create Deals and Packages",
    "jsonPage": "viewExploreSmash",
    "desciption": "",
    "pageType": "create",
    "fields": [{
        "name": "City Name",
        "type": "selectFromTable",
        "option": "multiple",
        "tableRef": "city",
        "placeholder": "Enter name",
        "id": "input1",
        "validation": ["required", "trim", "unique"],
        "url": "city/getAll"
    },{
           "name": "Title",
           "type": "text",
           "tableRef": "hometext",
           "placeholder": "Enter text for home slider",
           "id": "input5",
           "validation": ["required", "trim", "unique"],
           "url": ""
       },{
        "name": "Home Page Image",
        "type": "image",
        "tableRef": "image",
        "size": "596 x 358px",
        "placeholder": "Enter Picture",
        "id": "input4",
        "validation": ["required", "trim", "unique"],
        "url": ""
    },{
           "name": "Order",
           "type": "text",
           "tableRef": "order",
           "placeholder": "Enter order",
           "id": "input5",
           "validation": ["required", "trim", "unique"],
           "url": ""
       },{
           "name": "Status",
           "type": "select",
           "tableRef": "status",
           "placeholder": "Enter Is Home",
           "id": "input3",
           "validation": ["required", "trim", "unique"],
           "url": [{
               "value": true,
               "name": "Enable"
           }, {
               "value": false,
               "name": "Disable"
           }]
       }, {
           "name": "Show Home",
           "type": "select",
           "tableRef": "isHome",
           "placeholder": "Enter Is Home",
           "id": "input3",
           "validation": ["required", "trim", "unique"],
           "url": [{
               "value": true,
               "name": "Yes"
           }, {
               "value": false,
               "name": "No"
           }]
       },{
        "name": "Inside Page Image",
        "type": "image",
        "tableRef": "homeimage",
        "size": "600 x 400 px",
        "placeholder": "Enter Picture",
        "id": "input4",
        "validation": ["required", "trim", "unique"],
        "url": ""
    },{
         "name": "Description",
         "type": "tinymce",
         "tableRef": "description",
         "placeholder": "Enter description",
         "id": "input5",
         "validation": ["required", "trim", "unique"],
         "url": ""
     },{
         "name": "Facebook Link",
         "type": "text",
         "tableRef": "fb",
         "placeholder": "Enter facebook link",
         "id": "input5",
         "validation": ["required", "trim", "unique"],
         "url": ""
     },
     {
         "name": "Twitter Link",
         "type": "text",
         "tableRef": "twitter",
         "placeholder": "Enter twitter link",
         "id": "input5",
         "validation": ["required", "trim", "unique"],
         "url": ""
     },
     {
         "name": "Google Link",
         "type": "text",
         "tableRef": "google",
         "placeholder": "Enter google link",
         "id": "input5",
         "validation": ["required", "trim", "unique"],
         "url": ""
     }, {
        "name": "Price",
        "type": "text",
        "tableRef": "price",
        "placeholder": "Enter price",
        "id": "input1",
        "validation": ["required", "trim", "unique"],
        "url": ""
    }],
    "action": [{
        "name": "submit",
        "action": "submitExploreSmash"
    }, {
        "name": "cancel",
        "stateName": "page({jsonName:'viewExploreSmash'})"
    }],

    "apiCall": {
        "url": "exploresmash/saveDeals"
    }
}
