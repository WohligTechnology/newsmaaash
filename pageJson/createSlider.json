{
    "title": "Create Slider",
    "jsonPage": "viewSlider",
    "desciption": "",
    "pageType": "create",
    "fields": [{
        "name": "City Name",
        "type": "selectFromTable",
        "option":"multiple",
        "tableRef": "city",
        "placeholder": "Enter name",
        "id": "input1",
        "validation": ["required", "trim", "unique"],
        "url": "city/getAll"
    }, {
        "name": "Order",
        "type": "text",
        "tableRef": "order",
        "placeholder": "Enter order",
        "id": "input5",
        "validation": ["required", "trim", "unique"],
        "url": ""
    },{
        "name": "Banner",
        "type": "image",
        "tableRef": "image",
        "size":"1920px X 738px",
        "placeholder": "Enter City Picture",
        "id": "input4",
        "validation": ["required", "trim", "unique"],
        "url": ""
    },{
        "name": "Title",
        "type": "text",
        "tableRef": "title",
        "placeholder": "Enter title",
        "id": "input5",
        "validation": ["required", "trim", "unique"],
        "url": ""
    },{
        "name": "Banner Click Url",
        "type": "text",
        "tableRef": "url",
        "placeholder": "Enter url",
        "id": "input5",
        "validation": ["required", "trim", "unique"],
        "url": ""
    } , {
        "name": "Status",
        "type": "select",
        "tableRef": "status",
        "placeholder": "Enter status",
        "id": "input3",
        "validation": ["required", "trim", "unique"],
        "url": [{
            "value": true,
            "name": "Enable"
        }, {
            "value": false,
            "name": "Disable"
        }]
    }],
    "action": [{
        "name": "submit",
        "action": "submitSlider"
    }, {
        "name": "cancel",
        "stateName": "page({jsonName:'sliderView'})"
    }],

    "apiCall": {
        "url": "slider/save"
    },

    "sidemenu": [{
        "url": "",
        "anchor": "",
        "state": "",
        "action": ""
    }]
}
